<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField
        id="firstNum"
        fx:id="firstNum"
        GridPane.columnIndex="0"
        GridPane.rowIndex="0"
        promptText="Pierwsza liczba"/>
    <TextField
        id="secondNum"
        fx:id="secondNum"
        GridPane.columnIndex="0"
        GridPane.rowIndex="1"
        promptText="Druga liczba"/>
    <Button
        id="calcButton"
        fx:id="calcButton"
        GridPane.columnIndex="0"
        GridPane.rowIndex="2"
        text="Oblicz"
        onAction="#onCalculateBtnClick"/>
    <Label
        id="result"
        fx:id="result"
        GridPane.columnIndex="0"
        GridPane.rowIndex="3"/>
    <RadioButton
        id="radioAdd"
        fx:id="radioAdd"
        GridPane.columnIndex="1"
        GridPane.rowIndex="0"
        text="Dodaj"/>
    <RadioButton
        id="radioSub"
        fx:id="radioSub"
        GridPane.columnIndex="1"
        GridPane.rowIndex="1"
        text="Odejmij"/>
    <RadioButton
        id="radioMult"
        fx:id="radioMult"
        GridPane.columnIndex="1"
        GridPane.rowIndex="2"
        text="Pomnóż"/>
    <RadioButton
        id="radioDiv"
        fx:id="radioDiv"
        GridPane.columnIndex="1"
        GridPane.rowIndex="3"
        text="Podziel"/>
</GridPane>